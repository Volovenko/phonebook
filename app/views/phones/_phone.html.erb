<div class="col-md-4 blog-main box text-center" id="phone_<%= phone.id %>">
  <div class="panel panel-info">
      <div class="panel-heading">
        <h4 class="panel-title"><%= phone.name %></h4>
        <h5><%= phone.number %></h5>
      </div>

      <div class="panel-body">
      <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myupdatephone_<%= phone.id %>">
          Edit
        </button>
        <%= link_to 'Destroy', phone, method: :delete, class: "btn btn-danger", remote: true %>
      </div>
    </div>
  </div>

  <%= form_for(phone, :method => :put, remote: true) do |f| %>
    <div class="modal fade" id="myupdatephone_<%= phone.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Edit</h4>
          </div>
          <div class="modal-body">
            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_area :name, class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :number %><br>
              <%= f.text_area :number, class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" id="myupdatebutton_<%= phone.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= submit_tag "Update", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
